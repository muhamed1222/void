{
  "testRunner": "jest",
  "runnerConfig": "e2e/jest.config.js",
  "skipLegacyWorkersInjection": true,
  "behavior": {
    "init": {
      "exposeGlobals": true
    }
  },
  "apps": {
    "ios.debug": {
      "type": "ios.app",
      "binaryPath": "bin/Debug/app.apk",
      "build": "xcodebuild -workspace WhiteRoom.xcworkspace -scheme WhiteRoom -configuration Debug -sdk iphonesimulator -derivedDataPath build"
    },
    "ios.release": {
      "type": "ios.app",
      "binaryPath": "bin/Release/app.apk",
      "build": "xcodebuild -workspace WhiteRoom.xcworkspace -scheme WhiteRoom -configuration Release -sdk iphonesimulator -derivedDataPath build"
    },
    "android.debug": {
      "type": "android.apk",
      "binaryPath": "bin/Debug/app.apk",
      "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug",
      "reversePorts": [
        8081
      ]
    },
    "android.release": {
      "type": "android.apk",
      "binaryPath": "bin/Release/app.apk",
      "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release"
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 14"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_4a_API_30"
      }
    }
  },
  "configurations": {
    "ios.sim.debug": {
      "device": "simulator",
      "app": "ios.debug"
    },
    "ios.sim.release": {
      "device": "simulator",
      "app": "ios.release"
    },
    "android.emu.debug": {
      "device": "emulator",
      "app": "android.debug"
    },
    "android.emu.release": {
      "device": "emulator",
      "app": "android.release"
    }
  }
}